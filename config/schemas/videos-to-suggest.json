{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Choices",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Video id"
      },
      "url": {
        "type": "string",
        "format": "uri",
        "description": "Video URL"
      },
      "title": {
        "type": "string",
        "description": "Title of the choice"
      }
    },
    "additionalProperties": false,
    "oneOf": [
      { "required": ["id"] },
      { "required": ["url"] }
    ]
  }
}
